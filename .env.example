# Virtual Saree Try-On Backend Environment Configuration

# Server Configuration
HOST=0.0.0.0
PORT=8000
DEBUG=True
RELOAD=True

# Model Paths
MODNET_MODEL_PATH=models/modnet_photographic_portrait_matting.onnx
ESRGAN_MODEL_PATH=models/RealESRGAN_x4plus.pth
VITON_MODEL_PATH=models/viton_hd.pth
MEDIAPIPE_MODEL_PATH=models/pose_landmarker.task

# Storage Configuration
DATA_DIR=data
MODELS_DIR=models
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=jpg,jpeg,png

# Processing Configuration
MAX_CONCURRENT_JOBS=5
JOB_TIMEOUT=300  # 5 minutes
CLEANUP_INTERVAL=3600  # 1 hour
MAX_JOB_AGE=86400  # 24 hours

# Image Processing
DEFAULT_IMAGE_SIZE=512
MAX_IMAGE_SIZE=2048
ENHANCEMENT_SCALE=4
THUMBNAIL_SIZE=300,400

# AI Model Configuration
MODNET_CONFIDENCE_THRESHOLD=0.5
POSE_CONFIDENCE_THRESHOLD=0.5
ENABLE_GPU=True
BATCH_SIZE=1

# API Configuration
API_TITLE="Virtual Saree Try-On API"
API_VERSION="1.0.0"
API_DESCRIPTION="AI-powered virtual saree fitting backend"

# CORS Configuration
CORS_ORIGINS=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_HEADERS=*

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE=logs/app.log

# Security
SECRET_KEY=your-secret-key-here
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database (Optional)
# DATABASE_URL=sqlite:///./virtual_tryon.db
# DATABASE_URL=postgresql://user:password@localhost/virtual_tryon

# Redis (Optional - for job queue)
# REDIS_URL=redis://localhost:6379/0

# Monitoring (Optional)
# ENABLE_METRICS=True
# METRICS_PORT=9090

# Cloud Storage (Optional)
# AWS_ACCESS_KEY_ID=your-access-key
# AWS_SECRET_ACCESS_KEY=your-secret-key
# AWS_BUCKET_NAME=virtual-tryon-bucket
# AWS_REGION=us-east-1

# Email Notifications (Optional)
# SMTP_SERVER=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password